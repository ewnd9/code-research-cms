{
  "name": "code-research-cms",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --cwd apps/admin run dev",
    "build": "bun --cwd apps/admin run build",
    "server": "bun --cwd apps/admin run server",
    "server:api": "bun --cwd apps/admin run server:api",
    "start": "bun --cwd apps/admin run start"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
